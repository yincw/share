{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES2015",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": false,
    "strict": true
  },
  "include": [
    "src/index.ts",
 ],
  "exclude": [
    "tests",
    "node_modules"
  ]
}
